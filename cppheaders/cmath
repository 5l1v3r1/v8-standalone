#ifndef __V8SA_CMATH_HPP__
#define __V8SA_CMATH_HPP__

extern "C" {

#include <math.h>

}

namespace std {

bool isnan(float arg);
bool isnan(double arg);
bool isnan(long double arg);

bool isfinite(float arg);
bool isfinite(double arg);
bool isfinite(long double arg);

float floor(float x);
double floor(double x);
long double floor(long double x);

float ceil(float x);
double ceil(double x);
long double ceil(long double x);

float ldexp(float x, int exp);
double ldexp(double x, int exp);
long double ldexp(long double x, int exp);

bool isinf(float x);
bool isinf(double x);
bool isinf(long double x);

float logf(float x);
double log(double x);
long double logl(long double x);

float powf(float base, float exponent);
double pow(double base, double exponent);
long double powl(long double base, long double exponent);

int fpclassify(float arg);
int fpclassify(double arg);
int fpclassify(long double arg);

float fmodf(float number, float denom);
double fmod(double number, double denom);
long double fmodl(long double number, long double denom);

}

#endif